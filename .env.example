# MCP Configuration
MCP_CLIENT_ID=your-client-id
MCP_CLIENT_SECRET=your-client-secret
MCP_TEST_DATA_ENDPOINT=https://api.mcp.example.com/test-data
MCP_AUTH_ENDPOINT=https://login.microsoftonline.com/common/oauth2/v2.0/token

# Test Configuration
BASE_URL=https://example.com
ENVIRONMENT=staging
HEADLESS=true
SLOW_MO=0  # Slow down test execution by specified milliseconds

# Browser Configuration
BROWSER=chromium  # chromium, firefox, or webkit
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Test Data
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test@123
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=Admin@123

# Reporting
REPORT_PATH=test-results
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_RETRY=true

# CI/CD Configuration
CI=false
GITHUB_ACTIONS=false

# Debugging
DEBUG=pw:api  # Enable Playwright debug logging
NODE_ENV=development
